    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue:"
        android:id="@+id/blueScoreField"
        android:layout_marginStart="12dp"
        android:textSize="30sp"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/gridLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green:"
        android:id="@+id/greenScoreField"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        android:layout_below="@+id/blueScoreField"
        android:layout_alignStart="@+id/blueScoreField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameOverField"
        android:layout_below="@+id/greenScoreField"
        android:layout_alignStart="@+id/greenScoreField"
        android:layout_marginTop="23dp"
        android:textSize="30sp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_marginEnd="21dp"
        android:checked="false"
        android:textOn="AI"
        android:textOff="Human"
        android:onClick="mode"
        android:layout_alignTop="@+id/blueScoreField"
        android:layout_alignEnd="@+id/gridLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReStart"
        android:id="@+id/button"
        android:onClick="reStart"
        android:layout_alignTop="@+id/greenScoreField"
        android:layout_alignStart="@+id/toggleButton"
        android:layout_marginTop="11dp" />

